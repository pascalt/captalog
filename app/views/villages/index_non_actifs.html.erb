<%= link_to 'Retour', villages_path %>
<h1><%=@titre%></h1>
<table>

<% @villages.each do |village| %>
  <tr>
    <%= render 'liste_champs', :village => village %>
    <td><%= link_to 'Réactiver', reactive_village_path(village) %></td>
    <td><%= link_to 'Suppr.', village, :confirm => "Etes-vous certain de vouloir supprimer #{village.nom} et ses photos associées ?", 
                                                 :method => :delete %></td>
  </tr>
<% end %>
</table>

