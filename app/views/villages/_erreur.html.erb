<% if @village.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@village.errors.count, "erreur") %> ne permet<%= "tent" if @village.errors.count > 1 %> pas d'enregistrer le village:</h2>

    <ul>
    <% @village.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
