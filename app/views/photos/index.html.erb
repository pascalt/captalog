<%= render 'nav_index' %>
<h1>Liste des photos</h1>

<table>
  <tr>
    <th>Village</th>
    <th>Nom</th>
    <th>Legende</th>
    <th>Info</th>
    <th>Url originale</th>
    <th>Actif</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.village_id %></td>
    <td><%= photo.nom %></td>
    <td><%= photo.legende %></td>
    <td><%= photo.info %></td>
    <td><%= photo.url_originale %></td>
    <td><%= photo.actif %></td>
    <td><%= link_to 'Voir', [@village, photo] %></td>
    <td><%= link_to 'Editer', @village ? edit_village_photo_path(@village, photo) : edit_photo_path(photo) %></td>
    <td><%= link_to 'Suppr.', [@village, photo], :confirm => 'Etes-vous certain ?', :method => :delete %></td>
  </tr>
<% end %>
</table>

